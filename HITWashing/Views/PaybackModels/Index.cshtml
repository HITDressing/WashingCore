@model IEnumerable<HITWashing.Models.DBClass.PaybackModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemNum_1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemNum_2)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ItemNum_3)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCanceled)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsCompleted)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemNum_1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemNum_2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemNum_3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCanceled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.AccountName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PaybackOrderID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PaybackOrderID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PaybackOrderID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
