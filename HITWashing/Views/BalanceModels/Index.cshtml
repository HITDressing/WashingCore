@model IEnumerable<HITWashing.Models.DBClass.BalanceModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Account)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Balance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Account.MobileNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.BalanceID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BalanceID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BalanceID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
