@model IEnumerable<HITWashing.Models.DBClass.BorrowModel>
@using HITWashing.Models.DBClass
@{
    ViewData["Title"] = "订单池";
}

<div class="jumbotron" style="background-color:deepskyblue">
    <h2 style="color:white">@ViewBag.Title</h2>
    <p style="color:white" class="lead">
        配送专员再此选择要接的订单
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                用户
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNum_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNum_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNum_3)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_3)
                </td>
                <td>
                    @Html.ActionLink("接单", "PickOrder", "BorrowModels", routeValues: new { id = item.BorrowOrderID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<table class="table">
    <thead>
        <tr>
            <th>
                用户
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account.MobileNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNum_1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNum_2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemNum_3)
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in (List<PaybackModel>)ViewBag.Payback)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_3)
                </td>
                <td>
                    @Html.ActionLink("接单", "PickOrder", "PaybackModels", routeValues: new { id = item.PaybackOrderID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>