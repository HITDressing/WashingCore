@model HITWashing.Models.DBClass.AccountModel

@{
    ViewData["Title"] = "历史订单信息";
}

<div class="jumbotron" style="background-color:olivedrab">
    <h2 style="color:white">@ViewBag.Title</h2>
    <p style="color:white" class="lead">
        <span class="label label-warning">@Model.AccountName</span>
        <span class="label label-success">@Model.Address</span>
        <span class="label label-info">@Model.StoreName</span>
        <span class="label label-danger">@Model.MobileNumber</span>
    </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                操作
            </th>
            <th>
                操作
            </th>
            <th>
                操作
            </th>
            <th>
                操作
            </th>
            <th>
                操作
            </th>
            <th>
                操作
            </th>
            <th>
                操作
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.BorrowTransport)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AccountName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Account.MobileNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ItemNum_3)
                </td>
                <td>
                    @Html.ActionLink("接单", "PickOrder", "BorrowModels", routeValues: new { id = item.BorrowOrderID }, htmlAttributes: new { @class = "btn btn-xs btn-warning" })
                </td>
            </tr>
        }
    </tbody>
</table>