@model BSXWashing.Models.DBClass.TopupModel

@{
    ViewData["Title"] = "余额充值";
}

<div class="jumbotron" style="background-color:tomato">
    <h2 style="color:white">@ViewData["Title"]</h2>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TopupValue" class="control-label"></label>
                <input asp-for="TopupValue" class="form-control" />
                <span asp-validation-for="TopupValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TopupNote" class="control-label"></label>
                <input asp-for="TopupNote" class="form-control" />
                <span asp-validation-for="TopupNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AccountName" class="control-label"></label>
                <select asp-for="AccountName" class ="form-control" asp-items="ViewBag.AccountName"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="充值" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
