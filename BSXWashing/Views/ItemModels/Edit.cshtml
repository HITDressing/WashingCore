@model BSXWashing.Models.DBClass.ItemModel

@{
    ViewData["Title"] = "物品信息编辑";
}

<div class="jumbotron" style="background-color:mediumturquoise">
    <h2 style="color:white">@ViewData["Title"]</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ItemName" />
            <div class="form-group">
                <label asp-for="ItemValue" class="control-label"></label>
                <input asp-for="ItemValue" class="form-control" />
                <span asp-validation-for="ItemValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ItemNote" class="control-label"></label>
                <input asp-for="ItemNote" class="form-control" />
                <span asp-validation-for="ItemNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="提交" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
