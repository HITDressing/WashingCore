@model BSXWashing.Models.DBClass.AccountModel

@{
    ViewData["Title"] = "修改关键信息";
    ViewData["SubTitle"] = "修改关键信息";
}

<div class="jumbotron" style="background-color:lightseagreen">
    <h2 style="color:white">@ViewData["Title"]</h2>
    <h4>
        <span class="label label-warning">@ViewData["SubTitle"]</span>
    </h4>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Change">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AccountName" />
            <input type="hidden" asp-for="MobileNumber" />
            <input type="hidden" asp-for="Address" />
            <input type="hidden" asp-for="Password" />
            <input type="hidden" asp-for="Salt" />
            <input type="hidden" asp-for="StoreName" />
            <input type="hidden" asp-for="Balance" />

            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <select asp-for="Type" class="form-control">
                    <option value="0">超级管理员</option>
                    <option value="1">仓库保管员</option>
                    <option value="2">财务负责人</option>
                    <option value="3">配送专员</option>
                    <option value="4">客户</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <select asp-for="Level" class="form-control">
                    <option value="0">A类</option>
                    <option value="1">B类</option>
                    <option value="2">C类</option>
                    <option value="3">D类</option>
                    <option value="4">E类</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <select asp-for="Category" class="form-control">
                    <option value="0">洗浴</option>
                    <option value="1">宾馆</option>
                    <option value="2">美发</option>
                    <option value="3">预留</option>
                    <option value="4">其他</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="保存" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
