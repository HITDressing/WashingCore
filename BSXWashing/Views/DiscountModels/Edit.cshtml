@model BSXWashing.Models.DBClass.DiscountModel

@{
    ViewData["Title"] = "编辑折扣信息";
}

<div class="jumbotron" style="background-color:lightseagreen">
    <h2 style="color:white">@ViewData["Title"]</h2>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DiscountID" />
            <input type="hidden" asp-for="AccountName" />
            <div class="form-group">
                <label asp-for="DiscountValue" class="control-label"></label>
                <input asp-for="DiscountValue" class="form-control" />
                <span asp-validation-for="DiscountValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountNote" class="control-label"></label>
                <input asp-for="DiscountNote" class="form-control" />
                <span asp-validation-for="DiscountNote" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="提交修改" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
