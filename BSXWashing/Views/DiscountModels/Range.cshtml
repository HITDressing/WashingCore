@model BSXWashing.Models.ViewModel.RangeDiscount
@{
    ViewData["Title"] = "用户级别折扣修改";
    ViewData["SubTitle"] = "根据用户的LEVEL对折扣值进行修改";
}

<div class="jumbotron" style="background-color:lightseagreen">
    <h2 style="color:white">@ViewData["Title"]</h2>
    <h4>
        <span class="label label-warning">@ViewData["SubTitle"]</span>
    </h4>
</div>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Range">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Level" class="control-label"></label>
                <select asp-for="Level" class="form-control">
                    <option value="0">A类</option>
                    <option value="1">B类</option>
                    <option value="2">C类</option>
                    <option value="3">D类</option>
                    <option value="4">E类</option>
                </select>
                <span asp-validation-for="Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiscountValue" class="control-label"></label>
                <input asp-for="DiscountValue" class="form-control" />
                <span asp-validation-for="DiscountValue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-block btn-primary" />
            </div>
        </form>
    </div>
</div>

